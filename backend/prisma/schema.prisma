// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Model User - Người dùng với authentication
model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String   // Hashed password
  fullName      String
  role          String   @default("user") // "user" hoặc "admin"
  walletAddress String?  // Địa chỉ ví Ethereum (có thể null ban đầu)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  orders        Order[]  // Quan hệ 1-n với Order
}

// Model Order - Lưu thông tin off-chain
model Order {
  id              Int      @id @default(autoincrement())
  orderId         String   @unique  // ID đơn hàng (giống trên blockchain)
  userId          Int                 // FK tới User
  user            User     @relation(fields: [userId], references: [id])
  productId       String              // ID sản phẩm
  productName     String              // Tên sản phẩm
  quantity        Int                 // Số lượng
  amount          String              // Tổng tiền (lưu dạng string để giữ nguyên giá trị wei)
  buyerAddress    String              // Địa chỉ ví người mua (lấy từ User.walletAddress)
  transactionHash String   @unique    // Hash của transaction trên blockchain
  blockNumber     Int?                // Số block
  dataHash        String?             // Hash SHA256 của dữ liệu đơn hàng
  status          String   @default("pending") // pending, confirmed, failed
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Model Product - Danh sách sản phẩm
model Product {
  id          Int      @id @default(autoincrement())
  productId   String   @unique
  name        String
  description String?
  price       String   // Giá (wei)
  image       String?
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
